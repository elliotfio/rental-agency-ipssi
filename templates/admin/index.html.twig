{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-center">Gestion des Utilisateurs</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>RÃ´le</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                        <td>
                            {% if 'ROLE_ADMIN' not in user.roles %}
                                <a href="{{ path('admin_promote', {'id': user.id}) }}" class="btn btn-warning btn-sm">Promouvoir Admin</a>
                            {% endif %}
                            <form action="{{ path('admin_delete', {'id': user.id}) }}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}