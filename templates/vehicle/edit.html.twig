{% extends 'base.html.twig' %}

{% block title %}Modifier un véhicule{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Modifier le véhicule</h1>

    <div class="card shadow-sm p-4">
        <form method="post">
            <div class="mb-3">
                <label for="brand" class="form-label">Marque</label>
                <input type="text" id="brand" name="brand" class="form-control" value="{{ vehicle.brand }}" required>
            </div>

            <div class="mb-3">
                <label for="licencePlate" class="form-label">Immatriculation</label>
                <input type="text" id="licencePlate" name="licencePlate" class="form-control" value="{{ vehicle.licencePlate }}" required>
            </div>

            <div class="mb-3">
                <label for="dailyPrice" class="form-label">Prix par jour (€)</label>
                <input type="number" id="dailyPrice" name="dailyPrice" class="form-control" value="{{ vehicle.dailyPrice }}" required>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" id="available" name="available" class="form-check-input" {% if vehicle.available %}checked{% endif %}>
                <label for="available" class="form-check-label">Disponible</label>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('vehicle_index') }}" class="btn btn-secondary">Retour</a>
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}