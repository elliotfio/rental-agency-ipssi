{% extends 'base.html.twig' %}

{% block title %}Liste des V√©hicules{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des V√©hicules</h1>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Marque</th>
                <th>Immatriculation</th>
                <th>Prix/Jour</th>
                <th>Disponibilit√©</th>
                <th>R√©servations</th>
                <th>Note Moyenne</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for vehicle in vehicles %}
                <tr>
                    <td>{{ vehicle.id }}</td>
                    <td>{{ vehicle.brand }}</td>
                    <td>{{ vehicle.licencePlate }}</td>
                    <td>{{ vehicle.dailyPrice }} ‚Ç¨</td>
                    <td>
                        {% if vehicle.isAvailable %}
                            <span class="badge bg-success">Disponible</span>
                        {% else %}
                            <span class="badge bg-danger">Indisponible</span>
                        {% endif %}
                    </td>
                    <td>{{ vehicle.getTotalReservations() }}</td>
                    <td>{{ vehicle.getAverageRating() }}/5 ‚≠ê</td>
                    <td>
                        <a href="{{ path('vehicle_show', {'id': vehicle.id}) }}" class="btn btn-info btn-sm">Voir</a>

                        {% if app.user %}
                            {% if app.user.favorites.contains(vehicle) %}
                               <form action="{{ path('vehicle_remove_favorite', {'id': vehicle.id}) }}" method="post">
                                    <input type="hidden" name="_token" value="{{ csrf_token('favorite' ~ vehicle.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">‚ù§Ô∏è</button>
                                </form>
                            {% else %}
                                <form action="{{ path('vehicle_add_favorite', {'id': vehicle.id}) }}" method="post">
                                    <input type="hidden" name="_token" value="{{ csrf_token('favorite' ~ vehicle.id) }}">
                                    <button type="submit" class="btn btn-outline-primary btn-sm">üíô</button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucun v√©hicule disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}