{{ form_start(form) }}

<div class="mb-3">
    <label class="form-label fw-bold">Véhicule</label>
    <input type="text" class="form-control" value="{{ reservation.vehicle.brand }} ({{ reservation.vehicle.licencePlate }})" disabled>
</div>

<div class="mb-3">
    {{ form_label(form.startDate, 'Date de début', {'label_attr': {'class': 'fw-bold'}}) }}
    {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.endDate, 'Date de fin', {'label_attr': {'class': 'fw-bold'}}) }}
    {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Prix total</label>
    <input type="text" class="form-control" value="{{ reservation.totalPrice }} €" disabled>
</div>

<div class="d-flex justify-content-between">
    <a href="{{ path('reservation_index') }}" class="btn btn-secondary">Retour</a>
    <button type="submit" class="btn btn-primary">Mettre à jour</button>
</div>

{{ form_end(form) }}